<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
<%- include('includes/navigation.ejs') %>

<main>
    <div class="grid">
        <% for (var i=0; i < data.rows.length;  i++ ) { %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title">
                        <%= data.rows[i].title %>
                    </h1>
                </header>
                <div class="card__image">
                    <img src= <%= data.rows[i].image %> height="150px" alt="image">
                </div>
                <div class="card__content">
                    <h3 class="product__price">Price:
                        <%= data.rows[i].price %>
                    </h3>
                    <h3 class="product__description">Quantity:
                        <%= data.rows[i].quantity %>
                    </h3>
                </div>
                <div class="card__actions">
                    <form action="/prods" method="post">
                        <button class="btn" type="submit">Add to Cart</button>
                        <input type="hidden" name="product_id" value= <%= data.rows[i].id %> >
                    </form>
                </div>
            </article>
            <% } %>
    </div>
</main>
<%- include('includes/end.ejs') %>
